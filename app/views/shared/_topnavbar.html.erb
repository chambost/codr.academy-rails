<section class="top-nav">

<% if user_signed_in? %>
<div id="logout">

</div>
<div id="username">
<%= image_tag post.user.avatar_url, size: "32x32", alt: post.user.username %>
<%= current_user.email %>

<%= link_to "Logout", destroy_user_session_path, method: "delete" %>
</div>

<% else %>
<div id="login">
<%= link_to "Login", new_user_session_path %>
<%= link_to "Sign up", new_user_registration_path %>
</div>
<% end %>
</section>