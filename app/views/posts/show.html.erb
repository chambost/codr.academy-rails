<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Codr:</strong>
  <%= image_tag @post.user.avatar_url, size: "32x32", alt: @post.user.username %>
</p>

<p>
  <strong>Edited:</strong>
  <%= @post.edited %>
</p>

<p>
  <strong>Time:</strong>
  <%= @post.created_at %>
</p>

<%= image_tag @post.picture, width: "256" if @post.picture.attached?   %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
